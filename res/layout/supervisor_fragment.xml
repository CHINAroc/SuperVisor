<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <!-- 督导功能的Fragment -->

    <ImageButton
        android:id="@+id/ib_supervisor_directwrite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@drawable/ib_selector_supervisor"
        android:src="@drawable/ib_supervisor_directwrite" />

    <ImageButton
        android:id="@+id/ib_supervisor_preparewrite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@drawable/ib_selector_supervisor"
        android:src="@drawable/ib_supervisor_preparewrite" />

</LinearLayout>